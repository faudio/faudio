
git submodule init   external/curl/source;
git submodule update external/curl/source;

pushd external/curl/source;

./buildconf

CFLAGS="-arch x86_64" \
CXXFLAGS="-arch x86_64" \
LDFLAGS="-arch x86_64" \
./configure \
    --with-darwinssl \
    --prefix=`pwd`/../result \
    && MACOSX_DEPLOYMENT_TARGET="10.7" make \
    && make install

popd;

